<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdom.ajatt.viewer.android"
    android:installLocation="auto"
    android:versionCode="2"
    android:versionName="0.1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.D1" >
        <activity
            android:name="com.jdom.ajatt.viewer.android.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jdom.ajatt.viewer.android.NewestActivity"
            android:label="@string/title_newest"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.jdom.ajatt.viewer.android.TableOfContentsActivity"
            android:label="@string/title_tableOfContents"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.jdom.ajatt.viewer.android.RandomActivity"
            android:label="@string/title_random"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.jdom.ajatt.viewer.android.AboutActivity"
            android:label="@string/title_about"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.jdom.ajatt.viewer.android.PostViewerActivity"
            android:label="Post Viewer"
            android:theme="@style/Theme.D1" />
        <activity
            android:name="com.jdom.ajatt.viewer.android.SearchActivity"
            android:label="@string/title_search"
            android:theme="@style/Theme.D1" />
    </application>

</manifest>